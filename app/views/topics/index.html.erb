
<h1>Listing topics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
     <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
		<td><%= raw topic.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

