<!DOCTYPE html>
<html>
<head>
  <title>ForumApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
  <nav class="navbar navbar-inverse" role="navigation">
   <div class="navbar-header">
      <a class="navbar-brand" href="/forums">Home</a>
   </div>
   <div>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="active"><%=link_to "#{current_user.username}" , user_path(current_user) %></a></li>
          <li class="active"><%=link_to "Sign Out" , destroy_user_session_path, :confirm => 'Are you sure?', :method => :delete %></a></li>
        <% else %>
          <li class="active"><a href="/users/sign_in">Sign In</a></li>
        <% end %>
      </ul>
   </div>
</nav>

<%= yield %>

</body>
</html>
